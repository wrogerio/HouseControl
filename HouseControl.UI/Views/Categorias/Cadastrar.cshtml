@{
    var header = new HeaderViewModel { Title = "Cadastrar Categoria", ButtonText = "Voltar", ControllerToGo = "Categorias" };
}
@model HouseControl.Domain.Entities.Categoria

<partial name="_header" model="@header" />

<form asp-action="Cadastrar" method="post">

    <div class="row mb-2">
        <div class="col">
            <div class="form-group">
                <label>Nome da Categoria</label>
                <input class="form-control form-control-lg" asp-for="Nome" autofocus />
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col">
            <button type="submit" class="btn btn-outline-primary me-2" accesskey="i">
                <i class="fad fa-plus me-2"></i>
                Incluir
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fad fa-backward"></i>
                Voltar
            </a>
        </div>
    </div>

</form>