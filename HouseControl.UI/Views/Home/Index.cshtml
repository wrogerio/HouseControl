@{
    ViewData["Title"] = "Home Page";
}

<div class="row mb-2">
    <div class="col">
        <div class="d-flex justify-content-between border-bottom pb-2 align-items-center">
            <h2 class="text-primary">💵 Dashboard de Gastos 💷</h2>
            <div class="d-flex align-items-center">
                <h3 class="text-danger" id="gastoTotal"></h3>
            </div>
            <div class="form-group">
                <label>Mes e Ano de Análise</label>
                <input type="month" class="form-control" id="MesAno" value="@DateTime.Now.ToString("yyyy-MM")" />
            </div>
        </div>
    </div>
</div>

<div class="row mb-2" id="rowDash">
    <div class="col-2">
        <div class="card">
            <div class="card-header p-2 m-0 text-center">
                <h4 class="m-0">Mercado</h4>
            </div>
            <div class="card-body p-4 bg-secondary text-white text-center">
                <h3>R$ 23,25</h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jsdash.js"></script>
}